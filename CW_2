/////////////////////////Варіант 2, завдання 1 ///////////////////
#include <iostream>
using namespace std;
int main() {
    int n, c1, c2, c3;
    cout << "Input n:";
    cin >> n;
    c1 = (n / 100) % 10;
    c2 = (n / 10) % 10;
    c3 = (n % 100) % 10;
    //cout << c1 << c2 << c3;
    if (c2 > c1 & c2 > c3) {
        cout << "Res:" << c2 << c1 << c3;
    }
    else if (c3 > c2 & c3 > c1) {
        cout << "Res:" << c3 << c1 << c2;
    }
    else {
        cout << "Res:" << n;
    }
    cout << endl;
    system("pause");
    return 0;
}
